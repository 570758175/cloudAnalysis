 public void updateFields(T data, String id)
    {
        logger.info("MongoDao.updateFields begin! data is " + Common.getInstance().entity2Json(data));
        
        DBObject newObject = new BasicDBObject();
        newObject.put("$set", Common.getInstance().entity2Object(data));
        logger.info("MongoDao.updateFields begin! newObject is " + newObject);
        DBObject queryValue = new BasicDBObject();
        queryValue.put("_id", id);
        dbCollection.update(queryValue, newObject);
        
        logger.info("MongoDao.updateFields end!");
    }
   public List<DBObject> find(T data)
        throws Exception
    {
        logger.info("MongoDao.find begin! id is " + Common.getInstance().entity2Json(data));
        
        DBObject newObject = new BasicDBObject();
        
        newObject = Common.getInstance().entity2Object(data);
        
        List<DBObject> resultList = dbCollection.find(newObject).toArray();
        logger.info("MongoDao.find end!result+ " + resultList);
        return resultList;
    }
